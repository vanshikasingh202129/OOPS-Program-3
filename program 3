#include <iostream>
using namespace std;
class math
{
public:
    int power(double m, int n)
    {
        int i;
        double ans = 1;
        for (i = 1; i <= n; i++)
        {
            ans = ans * m;
        }
        return ans;
    }
};
int main()
{
    double result = 0;
    int a, b;
    math p;
    cout << "enter the value: ";
    cin >> a;
    cout << "enter the power: ";
    cin >> b;
    result = p.power(a, b);
    cout << "Result: " << result;
    return 0;
}
